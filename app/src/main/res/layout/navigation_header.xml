<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/colorPrimaryDark">

    <TextView
            android:text="56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/age"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.356"
            app:layout_constraintVertical_bias="0.567"
            android:textColor="#FFFFFF"/>
    <TextView
            android:text="Janusz Grzyb"
            android:layout_width="128dp"
            android:layout_height="18dp" android:id="@+id/name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.195"
            android:textColor="#FFFFFF" android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_baseline_person_24"
            tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="-1dp"
            android:id="@+id/imageView4"/>
    <TextView
            android:text="lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textAge"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="0.42" app:layout_constraintVertical_bias="0.567"
            android:textColor="#FFFFFF"/>


</androidx.constraintlayout.widget.ConstraintLayout>